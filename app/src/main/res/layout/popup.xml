<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="350dp"
    android:layout_height="425dp"
    android:orientation="vertical"
    android:padding="5dp"

    android:background="@color/popupBackgroud"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Test"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Test"
            android:textStyle="bold|italic"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtDateAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Test2"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_1"
            android:layout_marginRight="10dp">


            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="kWh"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/txtCapacityCharged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp"

                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poj. po ład."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_2"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="kW"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/txtAveragePower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Średnia moc"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_3">



            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="zł"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/txtCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koszt"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_4"
            android:layout_marginRight="10dp">



            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="min"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />


            <TextView
                android:id="@+id/txtElapsedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czas ład."
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_5"
            android:layout_marginRight="10dp">


            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="kWh"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/txtInitialCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poj. począt."
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/popup_background_6">

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="test"
                android:textColor="@color/white"
                android:background="@drawable/popup_circle"
                android:layout_marginRight="5dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:text="Zamknij okno"
        android:textColor="@color/white" />
</LinearLayout>