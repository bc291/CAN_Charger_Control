<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
   >

    <TextView
        android:id="@+id/textView_transactionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:background="@drawable/circle_number_id"
        android:gravity="center"
        android:padding="15dp"
        android:text="TrId"
        android:textSize="20sp"
        android:textColor="#ffffff"/>


    <TextView
        android:id="@+id/textView_parameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_transactionId"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/textView_transactionId"
        android:text="CarModel"
        android:textAlignment="viewStart"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_dateAndTime"
        android:layout_alignBottom="@+id/textView_dateAndTime"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:text="Cost"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView_dateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView_parameter"
        android:layout_marginBottom="16dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textSize="15sp" />
</RelativeLayout>
</LinearLayout>